<UserControl x:Class="Fotobudka.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Settings/Options.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Ustawienia Ogólne" Source="/Pages/Settings/Options.xaml" />
                <mui:Link DisplayName="Ustawienia Zapisu" Source="/Pages/Settings/OptionsSave.xaml" />
                <!-- <mui:Link DisplayName="Wygląd" Source="/Pages/Settings/Appearance.xaml" />-->

                <mui:Link DisplayName="O aplikacji" Source="/Pages/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
